<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">編輯民宿飯店資訊：</h1>
  <div class="col-md-10 offset-md-1">
    <div class="card shadow">
      <div class="card-body">
        <form
          action="/hotels/<%= hotel._id%>?_method=PUT"
          method="POST"
          class="validated-form"
          novalidate
          enctype="multipart/form-data"
        >
          <div class="mb-3">
            <label class="form-label" for="Name">飯店名稱：</label>
            <input
              class="form-control"
              type="text"
              id="Name"
              name="hotel[Name]"
              value="<%=hotel.Name %>"
              required
            />
          </div>
          <div class="mb-3">
            <label class="form-label" for="Location">飯店位置：</label>
            <input
              class="form-control"
              type="text"
              id="Location"
              name="hotel[Location]"
              value="<%=hotel.Location %>"
              required
            />
          </div>
          <div class="mb-3">
            <label class="form-label" for="Tel">連絡電話：</label>
            <input
              class="form-control"
              type="text"
              id="Tel"
              name="hotel[Tel]"
              value="<%=hotel.Tel %>"
              required
            />
          </div>
          <div class="mb-3">
            <label class="form-label" for="WebsiTe">官方網站：</label>
            <input
              class="form-control"
              type="text"
              id="Website"
              name="hotel[Website]"
              value="<%=hotel.Website %>"
              required
            />
          </div>
          <div class="mb-3">
            <label class="form-label" for="Description">飯店描述：</label>
            <textarea
              class="form-control"
              type="text"
              id="Description"
              name="hotel[Description]"
              required
            >
            <%=hotel.Description %>
            </textarea>
          </div>
          <div class="mb-3">
            <label class="form-label" for="LowestPrice">最低價格：</label>
            <div class="input-group mb-3">
              <span class="input-group-text" id="LowestPrice">$NT</span>
              <input
                type="text"
                class="form-control"
                placeholder="0"
                aria-label="LowestPrice"
                aria-describedby="LowestPrice"
                id="LowestPrice"
                name="hotel[LowestPrice]"
                value="<%= hotel.LowestPrice %>"
                required
              />
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="CeilingPrice">最高價格：</label>
            <div class="input-group mb-3">
              <span class="input-group-text" id="CeilingPrice-label">$NT</span>
              <input
                type="text"
                class="form-control"
                placeholder="0"
                aria-label="CeilingPrice"
                aria-describedby="CeilingPrice-label"
                id="CeilingPrice"
                name="hotel[CeilingPrice]"
                value="<%=hotel.CeilingPrice%>"
                required
              />
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="Serviceinfo">服務資訊：</label>
            <div class="input-group mb-3">
              <textarea
                type="text"
                class="form-control"
                id="Serviceinfo"
                name="hotel[Serviceinfo]"
                required
              >
<%=hotel.Serviceinfo%>
</textarea
              >
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="Parkinginfo">停車資訊：</label>
            <div class="input-group mb-3">
              <textarea
                type="text"
                class="form-control"
                id="Parkinginfo"
                name="hotel[Parkinginfo]"
                required
              >
<%=hotel.Parkinginfo%>
</textarea
              >
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="Image">上傳圖片：</label>
            <input
              class="form-control"
              type="file"
              id="Image"
              name="hotel[Images]"
              multiple
            />
          </div>
          <div class="mb-3">
            <% hotel.Images.forEach((img,i)=>{%>
            <img src="<%=  img.thumbnail %>" alt="" class="img-thumbnail" />
            <div class="form-check-inline">
              <input
                type="checkbox"
                id="image-<%= i %>"
                name="deleteImages[]"
                value="<%= img.filename%>"
              />
            </div>
            <label for="image-<% i %>">刪除</label>
            <%}) %>
          </div>

          <div class="mb-3">
            <button class="btn btn-success">更新民宿飯店資訊</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<a href="/hotels">返回所有民宿飯店資訊</a>
